<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cek Harga HP Bekas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivBrandImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_default"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Merk HP:" />
        <Spinner
            android:id="@+id/spnBrand"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="RAM (GB):" />
        <Spinner
            android:id="@+id/spnRam"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Internal Storage (GB):" />
        <Spinner
            android:id="@+id/spnStorage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lama Pemakaian (Tahun):" />
        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Contoh: 2"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kondisi Fisik: 5" />
        <SeekBar
            android:id="@+id/sbCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung Harga" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>